<img src="/assets/img/burger-gif.gif" class="burger-pic" alt="Burger riding a skateboard" >

<h1>Eat-Da-Burger!</h1>

<div class="burgers-all">
  <ul class="burgers-undevoured">
    <h3>Devour Me!</h3>
    {{#each burgers}}
      {{#unless devoured}}
        <div class="burgers">
          <li class="burger" id="burger-{{this.id}}">{{this.id}}. {{this.name}}</li>
          <button class="devourButton" id="devourButton-{{this.id}}">Devour It!</button>
        </div>
      {{/unless}}
    {{/each}}
  </ul>

  <ul class="burgers-devoured">
    <h3>Devoured</h3>
    {{#each burgers}}
      {{#if devoured}}
        <li class="burger">{{this.id}}. {{this.name}}</li>
      {{/if}}
    {{/each}}
  </ul>
</div>

<form class="create-form">
  <div class="form-group">
    <input type="text" id="burger-input" name="name" placeholder="Enter a burger you want to devour!">
  </div>
  <button type="submit" id="burger-submit">Add Burger!</button>
</form>
